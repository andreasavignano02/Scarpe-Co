@model Scarpe_Co.Models.Articoli

@{
    ViewBag.Title = "ChangeVisible";
}

<h2>ChangeVisible</h2>

@if (ViewBag.ConfermaOffuscamento != null)
{
    <div class="alert alert-success">
    @ViewBag.ConfermaOffuscamento
    </div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Articoli</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
        <div class="form-group">
            @Html.LabelFor(model => model.Visibile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Visibile)
                    @Html.ValidationMessageFor(model => model.Visibile, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
